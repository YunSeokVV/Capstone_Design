<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capston_design">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Capston_Design"
        android:usesCleartextTraffic="true">
        <activity android:name="bootpay.example.capston_design.Purchase_detail_list"></activity>
        <activity android:name="bootpay.example.capston_design.Product_purchase_list" />
        <activity android:name="bootpay.example.capston_design.Pay_Activity" />
        <activity android:name="bootpay.example.capston_design.WebViewActivity" />
        <activity
            android:name="bootpay.example.capston_design.Detail_Information"
            android:label="@string/title_activity_detail__information" />
        <activity
            android:name="bootpay.example.capston_design.MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bootpay.example.capston_design.Capture"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />
    </application>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>